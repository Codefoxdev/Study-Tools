{
    "manifest_version": 2,
    "name": "Study Tools",
    "version": "0.1.1.1",
    "icons": {
        "100": "icon.svg"
    },
    "content_scripts": [
        {
            "matches": [
                "*://accounts.magister.net/account/login*"
            ],
            "js": [
                "jquery-3.5.1.min.js",
                "magisterLogin.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "*://*.magister.net/magister*"
            ],
            "js": [
                "magister.js"
            ],
            "run_at": "document_end"
        }
    ],
    "browser_action": {
        "default_icon": "icon.svg"
    },
    "permissions": [
        "storage"
    ]
}